    ) !{currentVal}

mixin passwordField()
  .mb-3 
    label.form-label(for='password') Admin password *
    input.form-control(
      id='password'
      name='password'
      type='password'
      placeholder='Admin password is required to save any changes'
      required=true
      value=''
    )

mixin submitButton()
  .mb-3
    input.btn.btn-primary(
      type='submit'
    )

mixin cancelButton()
  .mb-3 
    a.btn.btn-outline-secondary(
      href='./'
      role='button'
    ) Cancel

mixin submitAndCancelButtons()
  .mb-3 
    input.btn.btn-primary(
      type='submit'
    )
    | 
    a.btn.btn-outline-secondary(
      href='./'
      role='button'
    ) Cancel
    

mixin inventoryRowField(fieldName, labelText, currentVal)
  .row.mb-3
    .col-sm-2
      input.form-control(
        id=fieldName
        name=fieldName
        type='number'
        value!=currentVal
      )
    .col-sm-10
      label.form-label(for=fieldName) !{labelText}
    