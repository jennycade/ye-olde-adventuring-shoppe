extends itemDetail 

block itemDetails 

    dt Weapon type 
    dd #{item.category} item

    dt Damage roll
    dd #{item.damageDice} #{item.damageType}
    dd Minimum damage: #{item.minDamage}
    dd Mean damage: #{item.meanDamage}
    dd Max damage: #{item.maxDamage}

    dt Properties 
    dd 
      dl
        each property in item.properties 
          dt #{property.name}
          dd #{property.description}
        else 
          dt No properties
    
    if item.rangeFt 
      dt Range 
      dd #{item.rangeFt} feet

    if item.special 
      dt Special rules 
      dd #{item.special}