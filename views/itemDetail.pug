extends layout 

block content 
  h1!= item.name 

  if item.image 
    img(src=item.image)
  
  dl 
    dt Cost 
    dd !{item.costGp} gp 

    dt Weight 
    dd !{item.weightLb} lb 

    block itemDetails
  
  a.btn.btn-outline-primary(href=`${item.url}/update`) Update 
  | 
  a.btn.btn-outline-danger(href=`${item.url}/delete`) Delete